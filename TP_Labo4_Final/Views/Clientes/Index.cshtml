@* @model IEnumerable<TP_Labo4_Final.Models.Cliente> *@
@* //Se cambia la referencia del model para poder usar el paginador *@
@model Paginador<TP_Labo4_Final.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<form method="get">
    <div class="row mb-2">
        <div class="col-md-8">
            <input type="text" name="searchString" class="form-control" value="@ViewData["searchString"]" placeholder="Buscar cliente..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Cargar nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Elementos.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Elementos.First().Apellido)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Elementos)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@* Paginador *@
<div>
    @if (Model.HayPaginaAnterior)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.PaginaActual - 1)" asp-route-searchString="@ViewData["searchString"]">Anterior</a>
    }

    Página @Model.PaginaActual de @Model.TotalPaginas

    @if (Model.HayPaginaSiguiente)
    {
        <a asp-action="Index" asp-route-pagina="@(Model.PaginaActual + 1)" asp-route-searchString="@ViewData["searchString"]">Siguiente</a>
    }
</div>

<hr />
<form asp-controller="ImportarEx" asp-action="Importar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file" style="font-size: 1.30em">Importar clientes desde archivo Excel:</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Importar</button>
</form>
<hr />

